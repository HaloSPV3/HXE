<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk" DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <Configuration Condition=" '$(Configuration)' == '' ">Debug</Configuration>
    <!-- GitVersion Auto-Patch
      ref: https://gitversion.net/docs/usage/msbuild

      The sub-task named GitVersion.MsBuild.UpdateAssemblyInfo will inject
      version metadata into the assembly where GitVersion.MsBuild has been
      added to.

      By default, they are assigned as such:
      - AssemblyVersion              = ${GitVersion_AssemblySemVer}
      - AssemblyFileVersion          = ${GitVersion_MajorMinorPatch}.0
      - AssemblyInformationalVersion = ${GitVersion_InformationalVersion}

      Note: GenerateAssemblyFileVersionAttribute must be disabled to prevent
            conflicting with GitVersion's generated values. Attributes
            which inherit FileVersion will instead inherit GitVersion's values.
      -->
    <!-- Application | General -->
    <OutputPath>..\bin\$(Configuration)</OutputPath>
    <Platform>AnyCPU</Platform>
    <Prefer32Bit>false</Prefer32Bit>
    <OutputType>Exe</OutputType>
    <TargetFramework>net5.0-windows</TargetFramework>
    <TargetFrameworks>net5.0-windows;net6.0-windows</TargetFrameworks>
    <StartupObject>HXE.Program</StartupObject>
    <AssemblyName>HXE</AssemblyName>
    <RootNamespace>HXE</RootNamespace>
    <!-- Application | Resources -->
    <ApplicationIcon>Assets\icon.ico</ApplicationIcon>
    <!-- Build | General -->
    <Deterministic>true</Deterministic>
    <FileAlignment>512</FileAlignment>
    <!-- Build | Error and warnings -->
    <WarningLevel>4</WarningLevel>
    <!-- Build | Output -->
    <!-- Build | Events -->
    <RunPostBuildEvent>OnBuildSuccess</RunPostBuildEvent>
    <!-- Build | Strong Naming -->
    <SignAssembly>False</SignAssembly>
    <!-- NuGet Packaging -->
    <Authors>HaloSPV3</Authors>
    <Company>github/HaloSPV3</Company>
    <Copyright>Copyright Â© 2019 Emilian Roman</Copyright>
    <Description>A HCE wrapper and SPV3 loader</Description>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <IncludeSymbols>false</IncludeSymbols>
    <PackageLicenseExpression>Zlib</PackageLicenseExpression>
    <PackageIcon>icon.png</PackageIcon>
    <PackageProjectUrl>https://github.com/HaloSPV3/HXE</PackageProjectUrl>
    <PackageReadmeFile>readme.md</PackageReadmeFile>
    <PackageTags>Halo</PackageTags>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <RepositoryUrl>https://github.com/HaloSPV3/HXE</RepositoryUrl>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <!-- GitVersion DotNet SDK Compatibility -->
    <GenerateAssemblyFileVersionAttribute>false</GenerateAssemblyFileVersionAttribute>
    <!-- Publish -->
    <GenerateRuntimeConfigurationFiles>false</GenerateRuntimeConfigurationFiles>
    <!--<IsTrimmable>true</IsTrimmable> Not compatible with WinForms/WPF -->
    <!--<PublishTrimmed>true</PublishTrimmed> Not compatible with WinForms/WPF -->
    <PublishSingleFile>true</PublishSingleFile>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <TrimMode>link</TrimMode>
    <TrimmerDefaultAction>link</TrimmerDefaultAction>
    <!-- Misc -->
    <ProjectGuid>{ACAA5D9F-B23D-43E1-B2DF-8C03230975A1}</ProjectGuid>
    <AppDesignerFolder>Properties</AppDesignerFolder>
    <ProductName>HXE</ProductName>
    <PublisherName>Halo SPV3 Team</PublisherName>
    <EnableNETAnalyzers>true</EnableNETAnalyzers>
    <ToolCommandName>hxe</ToolCommandName>
    <UseWPF>true</UseWPF>
    <UseWindowsForms>true</UseWindowsForms>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
    <DefineConstants>DEBUG;TRACE</DefineConstants>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
    <DefineConstants>TRACE</DefineConstants>
  </PropertyGroup>
  <ItemGroup>
    <None Include="..\*.*">
      <Link>.root\%(Filename)%(Extension)</Link>
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </None>
    <None Include="..\.github/**/*.*">
     <Link>.root\.github\%(RecursiveDir)%(Filename)%(Extension)</Link>
    </None>
    <None Include="..\doc/**/*.*">
      <Link>.docs\%(RecursiveDir)%(Filename)%(Extension)</Link>
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </None>
    <None Include="..\*.md">
      <Link>.docs-misc\%(Filename)%(Extension)</Link>
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </None>
    <None Include="*.txt">
      <Link>.docs-misc\%(Filename)%(Extension)</Link>
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </None>
    <None Include="src.licenseheader">
      <Link>.docs-misc\%(Filename)%(Extension)</Link>
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </None>
  </ItemGroup>
  <ItemGroup>
    <!-- Campaign Support -->
    <Content Include="Campaigns\*.xml">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <TargetPath>%(FileName).xml</TargetPath>
    </Content>
    <!-- Assets -->
    <EmbeddedResource Include="Assets\banner.txt" />
    <EmbeddedResource Include="Assets\343I_DER.cer" />
    <Content Include="Assets\icon.ico" />
  </ItemGroup>
  <ItemGroup>
    <!-- NuGet Package Items -->
    <None Include="Assets\icon.png" Pack="true" PackagePath="\" />
    <None Include="..\readme.md" Pack="true" PackagePath="\">
      <Link>.docs-misc\readme.md</Link>
    </None>
  </ItemGroup>
  <ItemGroup>
    <!-- Package References -->
    <PackageReference Include="GitVersion.MsBuild" Version="5.7.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.SourceLink.GitHub">
      <Version>1.1.0-beta-20204-02</Version>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.Windows.Compatibility" Version="6.0.0-rc.1.21451.13" />
  </ItemGroup>
  <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
    <Exec Command="pwsh $(MSBuildProjectDirectory)/.msb.prebuild.ps1" />
  </Target>
  <Target Name="NoConfig" AfterTargets="PostBuildEvent;AfterPublish">
    <Exec Command="pwsh $(MSBuildProjectDirectory)/.msb.noConfig.ps1" />
  </Target>
</Project>
