<Window x:Class="HXE.Positions"
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	WindowStartupLocation="CenterScreen"
	SizeToContent="Height"
	CanResize="false"
	Width="240"
	Title="HXE.Positions">

	<Window.Styles>
		<StyleInclude Source="/GUI/Styles/HeaderedContentControl/GroupBoxModern.axaml" />
		<StyleInclude Source="/GUI/Styles/Window/HXE_Window.axaml" />
	</Window.Styles>

	<StackPanel
		Margin="10">

		<Label
			Content="HXE"
			HorizontalAlignment="Center"
			VerticalAlignment="Center"
			FontFamily="Inter Light"
			FontSize="32"
			Foreground="#8a80ad" />

		<HeaderedContentControl Header="OpenSauce XML">
			<DockPanel>
				<Button Content="Browse"
					Click="BrowseSource"
					DockPanel.Dock="Right"
					Margin="1,0,0,0" />
				<TextBox Name="SourceTextBox"
					IsReadOnly="True" />
			</DockPanel>
		</HeaderedContentControl>

		<HeaderedContentControl
			Header="Target Positions Binary">
			<DockPanel>
				<Button Content="Browse"
					Click="BrowseTarget"
					DockPanel.Dock="Right"
					Margin="1,0,0,0" />
				<TextBox Name="TargetTextBox"
					IsReadOnly="True" />
			</DockPanel>
		</HeaderedContentControl>

		<Grid
			Margin="0,10,0,0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition />
				<ColumnDefinition />
			</Grid.ColumnDefinitions>

			<Button Grid.Column="0"
				Margin="0,0,0.5,0"
				Content="Save"
				Click="Save" />
			<Button Grid.Column="1"
				Margin="0.5,0,0,0"
				Content="Cancel"
				Click="Cancel" />
		</Grid>
	</StackPanel>
</Window>
