<Window xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="HXE.MainWindow"
    Title="HXE"
    SizeToContent="WidthAndHeight">

    <Window.Styles>
        <StyleInclude Source="/GUI/Styles/Window/HXE_Window.axaml" />
    </Window.Styles>

    <StackPanel Margin="10,10,10,10">
        <TextBlock> Welcome to Avalonia! </TextBlock>

        <Button Name="OpenSettingsBtn" Click="OpenSettings">Open Settings</Button>
        <Button Name="OpenPositionsBtn" Click="OpenPositions">Open Positions</Button>

    </StackPanel>
</Window>
