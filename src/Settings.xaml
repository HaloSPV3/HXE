<Window x:Class="HXE.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HXE"
        mc:Ignorable="d"
        SnapsToDevicePixels="True"
        WindowStartupLocation="CenterScreen"
        SizeToContent="Height"
        ResizeMode="NoResize"
        Width="250">
    <StackPanel Margin="10">
        <Label Content="HXE"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               FontFamily="Segoe UI Light"
               FontSize="32"
               Foreground="#8a80ad" />

        <GroupBox Header="Mode">
            <ComboBox Name="Mode">
                <ComboBoxItem Content="HCE" />
                <ComboBoxItem Content="SPV3.1" />
                <ComboBoxItem Content="SPV3.2" />
            </ComboBox>
        </GroupBox>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <GroupBox Header="Main">
                    <StackPanel>
                        <CheckBox Content="Reset"
                                  Name="MainReset" />
                        <CheckBox Content="Patch"
                                  Name="MainPatch" />
                        <CheckBox Content="Start"
                                  Name="MainStart" />
                        <CheckBox Content="Resume"
                                  Name="MainResume" />
                    </StackPanel>
                </GroupBox>
                <GroupBox Header="Speed">
                    <TextBox Name="TweaksSpeed" />
                </GroupBox>
            </StackPanel>

            <GroupBox Grid.Column="1"
                      Header="Tweaks">
                <StackPanel VerticalAlignment="Center">
                    <CheckBox Content="Cinematic"
                              Name="TweaksCinematic" />
                    <CheckBox Content="Sensor"
                              Name="TweaksSensor" />
                    <CheckBox Content="Magnetism"
                              Name="TweaksMagnetism" />
                    <CheckBox Content="Auto Aim"
                              Name="TweaksAutoAim" />
                    <CheckBox Content="Acceleration"
                              Name="TweaksAcceleration" />
                    <CheckBox Content="PP Unload"
                              Name="TweaksUnload" />
                </StackPanel>
            </GroupBox>
        </Grid>

        <GroupBox Header="Video">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <CheckBox Content="Resolution"
                              Name="VideoResolution" />
                    <CheckBox Content="Uncap"
                              Name="VideoUncap" />
                    <CheckBox Content="Quality"
                              Name="VideoQuality" />
                    <CheckBox Content="Bless"
                              Name="VideoBless" />
                </StackPanel>

                <GroupBox Grid.Column="1"
                          Header="Gamma">
                    <TextBox Name="VideoGamma" />
                </GroupBox>
            </Grid>
        </GroupBox>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <GroupBox Grid.Column="0"
                      Header="Audio">
                <StackPanel>
                    <CheckBox Content="Quality"
                              Name="AudioQuality" />
                    <CheckBox Content="Enhancements"
                              Name="AudioEnhancements" />
                </StackPanel>
            </GroupBox>

            <GroupBox Grid.Column="1"
                      Header="Input">
                <StackPanel VerticalAlignment="Center">
                    <CheckBox Content="Override"
                              Name="InputOverride" />
                </StackPanel>
            </GroupBox>
        </Grid>

        <Grid Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Margin="0,0,0.5,0"
                    Content="Save"
                    Click="Save" />
            <Button Grid.Column="1"
                    Margin="0.5,0,0,0"
                    Content="Cancel"
                    Click="Cancel" />
        </Grid>
    </StackPanel>
</Window>